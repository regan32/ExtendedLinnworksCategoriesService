{
  "Cors": {
    "Policies": {
      "Swagger": {
        "Headers": [ "*" ],
        "Origins": [ "*" ],
        "Methods": [ "*" ]
      }
    }
  },
  
  "Kestrel": {
    "Endpoints": {
      "HTTP": { "Url": "http://*:5005" }
    }
  },
  
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "SwaggerSettings": {
    "Enabled": true,
    "RoutePrefix": "swagger"
  },
  
  "LinnSystemsClientSettings": {
    "Url": "https://eu.linnworks.net"
  },
  
  "AllowedHosts": "*"
}
